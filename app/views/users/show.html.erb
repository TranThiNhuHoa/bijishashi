<head> 
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!-- <link href="css/bootstrap.min.css" rel="stylesheet"> -->

	<!-- Website Font style -->
	<link rel="stylesheet" href="http://cdn.wallpapersafari.com/13/23/6XUC9G.jpg">

</head>
<% provide(:title, @user.fullname) %>

<br>
<div class="row">
	<div class="col-md-4 col-md-offset-1">
		<div class="user-avatar">
			<img class="profile-image" src="http://mp3red.me/cover/4665479-460x460/animal-island.jpg" >
		</div>
		<div class="user-info">
			<h3><%= @user.email %>
			</h3>		
		</div>
	</div>
</div>


<div class="row" style="margin-top: 200px">

	
	
	<div class="col-md-10">



    <% @images.each do |image| %>
      <div class="col-sm-4 col-md-6  ">
			<div class="one-post" >
				<div class="">
					<%= image_tag image.file, class:"card-image" %>
				</div>					
				<div>
					<div class="row caption">
						<div class="col-md-8">
							<%= image.title %>
							<%= truncate(image.title, :ommision => "... Read More", :length => 20) %>
						</div>
						<div class="col-md-4">
							<%= link_to 'read more >>', image %>
						</div>
					</div>
					<div class="row">
						<div class="col-md-8">
							<a class="btn btn-primary btn-product"><span class="glyphicon glyphicon-thumbs-up"></span> Like</a> 
						</div>
						<div class="col-md-2">
							<h4>
								<%if @user == current_user %>
								<%= link_to '', edit_image_path(image),class: 'glyphicon glyphicon-edit' %>
								<%end%>
							</h4>
						</div>
						<div class="col-md-2">
							<h4>
								<%if @user == current_user %>
								<%= link_to '', image, class: 'glyphicon glyphicon-trash', method: :delete, data: { confirm: 'Are you sure?' } %>
								<%end%>
							</h4>
						</div>

					</div>

				</div>
			</div>
		</div>
    <% end %>


<br>




	</div>
</div>